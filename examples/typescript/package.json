{
  "name": "gql_boilerplate-typescript_example",
  "repository": "git@github.com:matt-riley/gql_boilerplate.git",
  "author": "Matt Riley <matt@mattriley.me> (https://mattriley.me)",
  "license": "MIT",
  "options": {
    "tests": "test/"
  },
  "scripts": {
    "babel:dev": "babel-node --extensions '.ts' src/server/index.ts",
    "prebuild": "tsc --emitDeclarationOnly",
    "build": "NODE_ENV=production babel src --out-dir build --extensions \".ts\" -d build --copy-files --no-comments --source-maps inline",
    "prestart": "npm run build",
    "start": "node build/server/index.js",
    "start:dev": "nodemon --watch src -e .ts --exec npm run babel:dev",
    "test": "npm run lint && npm run test-only",
    "test-only": "NODE_ENV=test nyc --reporter=lcov mocha test/setup.js $npm_package_options_tests --timeout 2000",
    "type-check": "tsc --noEmit",
    "type-check:watch": "npm run type-check -- --watch",
    "lint": "tslint src test",
    "lint:fix": "tslint \"src/**/*.ts\" \"test/**/*.ts\" --fix"
  },
  "dependencies": {
    "apollo-datasource-rest": "0.3.0",
    "apollo-server-express": "2.4.0",
    "dotenv": "6.2.0",
    "express": "4.16.4",
    "graphql": "14.1.1"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/node": "7.2.2",
    "@babel/plugin-proposal-class-properties": "7.3.0",
    "@babel/preset-env": "7.3.1",
    "@babel/preset-typescript": "7.1.0",
    "@types/dotenv": "6.1.0",
    "@types/graphql": "14.0.5",
    "babel-plugin-transform-builtin-extend": "1.1.2",
    "babel-preset-minify": "0.5.0",
    "chai": "4.2.0",
    "chai-as-promised": "7.1.1",
    "chai-string": "1.5.0",
    "chai-subset": "1.6.0",
    "eslint": "5.13.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-mocha": "5.2.1",
    "mocha": "5.2.0",
    "mocha-sinon": "2.1.0",
    "nodemon": "1.18.9",
    "nyc": "13.2.0",
    "sinon": "7.2.3",
    "sinon-chai": "3.3.0",
    "tslint": "5.12.1",
    "typescript": "3.3.3"
  }
}