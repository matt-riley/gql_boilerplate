{
  "name": "gql_boilerplate",
  "version": "2.2.0",
  "repository": "git@github.com:matt-riley/gql_boilerplate.git",
  "author": "Matt Riley <matt@mattriley.me> (https://mattriley.me)",
  "license": "MIT",
  "scripts": {
    "build": "NODE_ENV=production babel src -d build --copy-files --no-comments && npm run update-schema",
    "start": "nodemon --watch src -e js,graphql --exec babel-node -- src/server/index.js",
    "update-schema:all": "run-p update-schema update-schema:fortune update-schema:lastfm update-schema:tsLastfm",
    "update-schema": "NODE_ENV=local babel-node ./scripts/build_schema.js",
    "update-schema:fortune": "cd examples/fortune-api && npm i && npm run update-schema",
    "update-schema:lastfm": "cd examples/lastfm && npm i && npm run update-schema",
    "update-schema:tsLastfm": "cd examples/typescript && npm i && npm run update-schema",
    "test": "npm run lint && npm run test:only",
    "test:all": "run-p test:fortune test:lastfm test:tsLastfm",
    "test:fortune": "cd examples/fortune-api && npm i && npm run test",
    "test:lastfm": "cd examples/lastfm && npm i && npm run test",
    "test:tsLastfm": "cd examples/typescript && npm i && npm run test",
    "test:only": "jest",
    "lint": "eslint src",
    "lint:fix": "eslint \"src/**/*.js\" --fix",
    "precommit": "npm run update-schema:all && git add -A"
  },
  "dependencies": {
    "apollo-datasource-rest": "0.3.0",
    "apollo-server-express": "2.4.0",
    "express": "4.16.4",
    "graphql": "14.1.1"
  },
  "devDependencies": {
    "@babel/cli": "7.2.3",
    "@babel/core": "7.2.2",
    "@babel/node": "7.2.2",
    "@babel/preset-env": "7.3.1",
    "@graphql-inspector/cli": "^0.13.1",
    "babel-plugin-transform-builtin-extend": "1.1.2",
    "babel-plugin-transform-import-to-read-file-sync": "0.2.1",
    "babel-preset-minify": "0.5.0",
    "eslint": "5.13.0",
    "eslint-config-airbnb-base": "13.1.0",
    "eslint-plugin-import": "2.16.0",
    "eslint-plugin-mocha": "5.3.0",
    "husky": "^1.3.1",
    "jest": "24.1.0",
    "nodemon": "1.18.10",
    "npm-run-all": "4.1.5"
  },
  "jest": {
    "collectCoverage": true,
    "coverageReporters": [
      "lcov"
    ]
  },
  "graphql-inspector": {
    "diff": true,
    "schema": {
      "ref": "master",
      "path": "schema.graphql"
    }
  }
}